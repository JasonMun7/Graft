{
  "manifest_version": 3,
  "name": "Graft",
  "version": "1.0",
  "description": "AI-powered Chrome extension that transforms text into interactive diagrams",
  "permissions": ["sidePanel", "activeTab", "scripting", "storage"],
  "action": {
    "default_icon": {
      "16": "graft_logo.png",
      "32": "graft_logo.png",
      "48": "graft_logo.png",
      "128": "graft_logo.png"
    }
  },
  "icons": {
    "16": "graft_logo.png",
    "32": "graft_logo.png",
    "48": "graft_logo.png",
    "128": "graft_logo.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
